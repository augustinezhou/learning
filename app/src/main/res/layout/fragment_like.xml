<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".like$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarHeight">
        <TextView
            android:id="@+id/countDownText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Count down"
            android:textSize="@dimen/countDownSize"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/img"/>

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--
        <Button
            android:id="@+id/like_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/likeText"
            android:onClick="clickLike"/>
        <Button
            android:id="@+id/dislike_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/dislikeText"
            android:onClick="clickDislike"/>
        -->
        <ImageButton
            android:id="@+id/like_button"
            android:src="@drawable/haha_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:onClick="clickLike"/>
        <ImageButton
            android:id="@+id/dislike_button"
            android:src="@drawable/doubt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:onClick="clickDislike"/>
    </RelativeLayout>

</LinearLayout>
